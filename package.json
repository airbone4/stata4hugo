{
  "name": "rmd-to-ipynb",
  "displayName": "Rmd to ipynb",
  "publisher": "your-name",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.convertToIpynb",
        "title": "Hugo tool: R/Markdown to Jupyter Notebook (.ipynb)"
      },
      {
        "command": "extension.convertIpynbToMd",
        "title": "Hugo tool: Jupyter notebook (.ipynb) to Markdown (.md)"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p .",
    "build:test": "tsc -p tsconfig.test.json",
    "clean": "rimraf out out-test",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "npm run compile && mocha -r ts-node/register test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.105.0",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^10.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.1",
    "unified": "^10.1.2"
  }
}
